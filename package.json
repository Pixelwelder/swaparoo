{
  "name": "swaparoo",
  "displayName": "Swaparoo",
  "version": "0.0.1",
  "description": "Learn Spanish by swapping words on webpages",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "compromise": "^14.14.5",
    "plasmo": "^0.90.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "typescript": "^5.7.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "storage",
      "contextMenus",
      "tabs",
      "scripting"
    ],
    "commands": {
      "add-selected-word": {
        "suggested_key": {
          "default": "Alt+S",
          "mac": "Alt+S"
        },
        "description": "Add selected word to Swaparoo"
      }
    }
  }
}
